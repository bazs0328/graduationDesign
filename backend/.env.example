# LLM provider: openai, gemini, deepseek, or qwen
LLM_PROVIDER=openai

# Embedding provider: openai, gemini, deepseek, qwen, or dashscope
EMBEDDING_PROVIDER=dashscope

# OpenAI
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Gemini (Google)
GOOGLE_API_KEY=your_google_key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# DeepSeek (OpenAI-compatible)
DEEPSEEK_API_KEY=your_deepseek_key
# base_url can be https://api.deepseek.com or https://api.deepseek.com/v1
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
# Optional: set an embedding model if your DeepSeek plan supports embeddings.
# If not set, the system will try to fall back to OpenAI embeddings (OPENAI_API_KEY).
DEEPSEEK_EMBEDDING_MODEL=

# Qwen (DashScope OpenAI-compatible)
QWEN_API_KEY=your_qwen_key
# base_url can be https://dashscope.aliyuncs.com/compatible-mode/v1 or https://dashscope-intl.aliyuncs.com/compatible-mode/v1
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus
QWEN_EMBEDDING_MODEL=text-embedding-v4

# DashScope MultiModal Embedding (SDK-based, uses QWEN_API_KEY)
DASHSCOPE_EMBEDDING_MODEL=qwen3-vl-embedding

# App
DATA_DIR=data
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
OCR_ENABLED=true
OCR_ENGINE=rapidocr
OCR_FALLBACK_ENGINES=rapidocr
OCR_LANGUAGE=chi_sim+eng
OCR_TESSERACT_LANGUAGE=
OCR_MIN_TEXT_LENGTH=10
OCR_RENDER_DPI=360
OCR_CHECK_PAGES=3
OCR_PREPROCESS_ENABLED=true
OCR_DESKEW_ENABLED=true
OCR_LOW_CONFIDENCE_THRESHOLD=0.78
PDF_PARSER_MODE=auto
PDF_LAYOUT_ENGINE=pymupdf
PDF_GARBLED_OCR_ENABLED=true
PDF_GARBLED_SINGLE_CHAR_LINE_RATIO=0.45
PDF_GARBLED_SHORT_LINE_RATIO=0.65
PDF_EXTRACT_IMAGES=true
PDF_IMAGE_MIN_AREA_RATIO=0.01
PDF_IMAGE_MAX_PER_PAGE=12
MM_IMAGE_INDEX_ENABLED=true
MM_IMAGE_COLLECTION_NAME=documents_images
QA_TOP_K=4
QA_FETCH_K=12
QA_BM25_K=6
RAG_MODE=hybrid
RAG_DENSE_WEIGHT=0.7
RAG_BM25_WEIGHT=0.3
