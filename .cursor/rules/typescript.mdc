// Type-safe mocking
type DeepMockProxy<T> = {
  [K in keyof T]: T[K] extends (...args: any[]) => infer R
    ? jest.MockedFunction<T[K]>
    : T[K] extends object
    ? DeepMockProxy<T[K]>
    : T[K];
